@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" disabled />
        </div>

        <div class="mb-3">
            <label asp-for="EtherAddress"></label>
            @if (!Model.IsWeb3User)
            {
                <label>(server managed)</label>
            }
            <input asp-for="EtherAddress" class="form-control" disabled />
        </div>

        @if (Model.EtherPreviousAddresses.Any())
        {
            <hr />
            <label asp-for="EtherPreviousAddresses"></label>
            <ul>
                @foreach (var addr in Model.EtherPreviousAddresses)
                {
                    <li>@addr</li>
                }
            </ul>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}