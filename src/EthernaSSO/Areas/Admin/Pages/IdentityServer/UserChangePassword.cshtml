@page
@model Etherna.SSOServer.Areas.Admin.Pages.IdentityServer.UserChangePasswordModel
@{
    ViewData["Title"] = "User Change Password";
}

<form Method="post">
    <div class="row">

        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="Users">Users</a></li>
                    <li class="breadcrumb-item"><a asp-page="User" asp-route-id="@Model.Id">@Model.Username</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                </ol>
            </nav>
        </div>

        <div class="col-md-12">
            <h3>@ViewData["Title"]</h3>

            <div asp-validation-summary="All" class="text-danger"></div>

            <!--Hidden -->
            <input type="hidden" asp-for="Id" />

            <div class="card mt-3">
                <h5 class="card-header">Change Password</h5>
                <div class="card-body">

                    <!--Input - text -->
                    <div class="mb-3 row">
                        <label asp-for="Username" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input type="hidden" class="form-control" asp-for="Username">
                            <h4>@Model.Username</h4>
                        </div>
                    </div>

                    <!--Input - text -->
                    <div class="mb-3 row">
                        <label asp-for="Input.Password" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" asp-for="Input.Password">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <!--Input - text -->
                    <div class="mb-3 row">
                        <label asp-for="Input.ConfirmPassword" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" asp-for="Input.ConfirmPassword">
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <!--Button-->
                    <div class="mb-3 row">
                        <label class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-danger">Change Password</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>