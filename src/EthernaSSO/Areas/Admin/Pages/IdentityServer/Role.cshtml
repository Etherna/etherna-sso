@page
@model Etherna.SSOServer.Areas.Admin.Pages.IdentityServer.RoleModel
@{
    ViewData["Title"] = "Role";
}

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="Roles">Roles</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Input.Name</li>
            </ol>
        </nav>
    </div>

    <div class="col-12">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>


<form id="client-form" asp-page-handler="Save" Method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    @if (Model.Id is not null)
    {
        <!--Button-->
        <div class="form-group row">
            <div class="col-sm-12">
                <a asp-page="RoleClaims" asp-route-id="@Model.Id" class="btn btn-outline-primary">+ Add Role Claims</a>
                <a asp-page="RoleUsers" asp-route-id="@Model.Id" class="btn btn-primary">Users</a>
                <a asp-page="RoleDelete" asp-route-id="@Model.Id" class="btn btn-danger">Delete Role</a>
            </div>
        </div>
    }

    <!--Hidden -->
    <input type="hidden" asp-for="Id" />
    <div class="card mt-3">
        <h5 class="card-header">@ViewData["Title"]</h5>
        <div class="card-body">

            <!--Input - text -->
            <div class="form-group row">
                <label asp-for="Input.Name" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input type="text" required class="form-control" asp-for="Input.Name">
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
            </div>

            <!--Button-->
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">
                </label>
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-primary">Save Role</button>
                </div>
            </div>
        </div>
    </div>
</form>