@page
@model Etherna.SSOServer.Areas.Admin.Pages.IdentityServer.IndexModel
@{
    ViewData["Title"] = "IdentityServer Admin";
}

<div class="welcome-block px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<!-- Cards -->
<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-4 mb-3 text-center">

    <!-- Users -->
    <div class="col">
        <div class="card h-100 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Users</h4>
            </div>
            <div class="card-body">
                <a asp-page="Users" class="btn btn-lg w-100 btn-primary">Manage</a>
            </div>
        </div>
    </div>

    <!-- Roles -->
    <div class="col">
        <div class="card h-100 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Roles</h4>
            </div>
            <div class="card-body">
                <a asp-page="Roles" class="btn btn-lg w-100 btn-primary">Manage</a>
            </div>
        </div>
    </div>

    <!-- Clients -->
    <div class="col">
        <div class="card h-100 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Clients</h4>
            </div>
            <div class="card-body">
                <a class="btn btn-lg w-100 disabled">Not implemented</a>
            </div>
        </div>
    </div>
</div>


<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-4 mt-4 text-center">
    <!-- Persisted Grants -->
    <div class="col">
        <div class="card h-100 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Persisted Grants</h4>
            </div>
            <div class="card-body">
                <a class="btn btn-lg w-100 disabled">Not implemented</a>
            </div>
        </div>
    </div>

    <!-- Identity Resources -->
    <div class="col">
        <div class="card h-100 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Identity Resources</h4>
            </div>
            <div class="card-body">
                <a class="btn btn-lg w-100 disabled">Not implemented</a>
            </div>
        </div>
    </div>

    <!-- Api Resources -->
    <div class="col">
        <div class="card h-100 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Api Resources</h4>
            </div>
            <div class="card-body">
                <a class="btn btn-lg w-100 disabled">Not implemented</a>
            </div>
        </div>
    </div>

    <!-- Api Scopes -->
    <div class="col">
        <div class="card h-100 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Api Scopes</h4>
            </div>
            <div class="card-body">
                <a class="btn btn-lg w-100 disabled">Not implemented</a>
            </div>
        </div>
    </div>
</div>
