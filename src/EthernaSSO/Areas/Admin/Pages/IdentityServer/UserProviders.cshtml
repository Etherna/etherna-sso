@page
@model Etherna.SSOServer.Areas.Admin.Pages.IdentityServer.UserProvidersModel
@{
    ViewData["Title"] = "User Providers";
}

<div class="row">

    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="Users">Users</a></li>
                <li class="breadcrumb-item"><a asp-page="User" asp-route-id="@Model.Id">@Model.Username</a></li>
                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
            </ol>
        </nav>
    </div>

    <div class="col-md-12">
        <h3>@ViewData["Title"]</h3>

        <div class="row table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Login Provider</th>
                        <th>Provider Display Name</th>
                        <th>Provider Key</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var provider in Model.Providers)
                    {
                        <tr>
                            <td>@provider.LoginProvider</td>
                            <td>@provider.ProviderDisplayName</td>
                            <td>@provider.ProviderKey</td>
                            <td>
                                <a asp-page="UserProvidersDelete"
                                   asp-route-id="@Model.Id"
                                   asp-route-loginProvider="@provider.LoginProvider"
                                   asp-route-providerKey="@provider.ProviderKey"
                                   class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>